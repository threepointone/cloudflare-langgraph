{
  "name": "cloudflare-examples",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "biome format --write .",
    "lint:biome": "biome lint .",
    "check": "biome check --apply .",
    "deploy": "turbo run deploy"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "turbo": "latest",
    "typescript": "^5.5.2"
  },
  "packageManager": "npm@10.2.4"
}
